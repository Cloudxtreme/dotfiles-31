# Create a varialbe with regular expression
var myRE = /hello/;

// or
var myRE = new RegExp("hello");

# Test if a string is existing in a giving string
var myString = "Does this sentence have the word hello in it?";
if ( myRE.test(myString) ) {
	alert("Yes");
}

var myRE = /^hello/; // hello at the start, using ^
					 /hello$/; // hello at the end, using $
					 /hel+o/; // l has to appear once or more with +; example: "helo", "hello";, "hellllllo";
					 /hel*o/; // l has to appear zero or more with *; "heo", "helo", "hello", "helllllo";
					 /hel?o/; // l has to appear zero or one with ?; "heo", "helo"

					/hello|goodbye/; // contain eigher|or
					/he..o/ // . any character
					/\wello/; // \w alphanumeric or _ (underscore)
					/\bhello/; // \b word boundary, after a new line or whitespace
					/[crnld]ope/; // [...] range of characters; "cope", "rope", "nope", "lope", "dope"
