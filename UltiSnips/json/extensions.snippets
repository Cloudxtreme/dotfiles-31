#######################################################################
#                         Extension Snippets                          #
#######################################################################

###########################
#  Assessment in Article  #
###########################

snippet assessment-in-article "assessment in the article.json" b
"_assessment": {
	"_isEnabled": true,
	"_id": "articleID",
	"_isPercentageBased": true,
	"_scoreToPass": 75,
	"_includeInTotalScore": true,
	"_assessmentWeight": 1,
	"_banks": {
		"_isEnabled": false,
		"_split": "2,1",
		"_randomisation": false
	},
	"_randomisation": {
		"_isEnabled": false,
		"_blockCount": 1
	},
	"_questions": {
		"_resetType": "hard",
		"_canShowFeedback": true,
		"_canShowMarking": true
	},
	"_isResetOnRevisit": true,
	"_attempts": "infinite"
}
endsnippet

snippet assessment-in-course "assessment in the course.json" b
"_assessment": {
		"_postTotalScoreToLms": ${1:true},
		"_isPercentageBased": ${2:true},
		"_scoreToPass": ${3:75},
		"_requireAssessmentPassed": ${4:true}
}$0
endsnippet

#######################
#  Trickle in Course  #
#######################

snippet trickle-in-course "trickle in the course.json" b
"_trickle": {
	"_isEnabled": ${1:true},
	"button": {
		"_isEnabled": true,
		"text": "Continue"
	}
}$0
endsnippet

#################
#  Bookmarking  #
#################

snippet bookmarking-en "add bookmarking in the course.json" b
"_bookmarking": {
	"_isEnabled": true,
	"_comment": "_level = page | block | component",
	"_level": "block",
	"title": "Bookmarking",
	"body": "Would you like to continue where you left off?",
	"_buttons": {
		"yes": "Yes",
		"no": "No"
	}
}
endsnippet

####################
#  Bookmarking Zh  #
####################

snippet bookmarking-zh "add bookmarking in the course.json" b

"_bookmarking": {
		"_isEnabled": ${1:true},
		"_comment": "_level = page | block | component",
		"_level": "${2:block}",
		"title": "'继续学习' 或 '重新开始'",
		"body": "请选择是否从上次停止处继续学习？",
		"_buttons": {
				"yes": "继续学习",
				"no": "重新开始"
		}
}$0
endsnippet

###############
#  Resources  #
###############

snippet resources-en "add this to the course.json" b
"_resources": {
	"title": "Resources",
		"description": "Select here to view resources for this course",
		"_filterButtons": {
			"all": "All",
			"document": "PDF",
			"media": "Media",
			"link": "Link"
		},
		"_filterAria": {
			"allAria": "View all resources",
			"documentAria": "View document resources",
			"mediaAria": "View media resources",
			"linkAria": "View resource links"
		},
		"_resourcesItems": [
			{
				"_type": "document",
				"title": "${4:title}",
				"description": "${5:description}",
				"_link": "course/en/pdf/${7:link}.${8:pdf}"
			},
			{
				"_type": "media",
				"title": "${9:title}",
				"description": "${10:description}",
				"_link": "course/en/media/${12:link}.${13:mp4}"
			},
			{
				"_type": "link",
				"title": "${14:title}",
				"description": "${15:description}",
				"_link": "http://$16"
			}
		]
}$0
endsnippet

