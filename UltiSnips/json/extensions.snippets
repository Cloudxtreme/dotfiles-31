################
#  Assessment  #
################

snippet assessment-in-article "assessment in the article.json" b
"_assessment": {
	"_isEnabled": true,
	"_id": "a-${1:articleID}",
	"_isPercentageBased": ${2:true},
	"_scoreToPass": 75,
	"_includeInTotalScore": true,
	"_assessmentWeight": 1,
	"_banks": {
		"_isEnabled": false,
		"_split": "2,1",
		"_randomisation": false
	},
	"_randomisation": {
		"_isEnabled": false,
		"_blockCount": 1
	},
	"_questions": {
		"_resetType": "hard",
		"_canShowFeedback": true,
		"_canShowMarking": true
		"_canShowModelAnswer": true
	},
	"_isResetOnRevisit": true,
	"_attempts": "infinite"
}$0
endsnippet
snippet assessment-in-course "assessment in the course.json" b
"_assessment": {
		"_postTotalScoreToLms": ${1:true},
		"_isPercentageBased": ${2:true},
		"_scoreToPass": ${3:75},
		"_requireAssessmentPassed": ${4:true}
}$0
endsnippet

#############
#  Trickle  #
#############

snippet trickle-in-course "trickle in the course.json" b
"_trickle": {
	"_isEnabled": ${1:true}
	}
}$0
endsnippet
snippet trickle-in-article "enable trickle for all blocks in an article" b
"_trickle": {
		"_isEnabled": ${1:true}
},$0
endsnippet
snippet trickle-in-block "manulally add trickle for each block" b
"_trickle": {
"_isEnabled": ${1:true},
"_scrollDuration": 500,
"_autoScroll": ${2:true},
"_scrollTo": "${3:@block +1}",
"_button": {
		"_isEnabled": ${4:true},
		"_styleBeforeCompletion": "${5:hidden}",
		"_styleAfterClick": "${6:hidden}",
		"_isFullWidth": ${7:true},
		"_autoHide": ${8:true},
		"_className": "${9:trickle-round-arrow}",
		"text": "${10:继续}",
		"finalText": "${11:结束}",
		"_component": "trickle-button"
},
"_stepLocking": {
		"_isEnabled": true,
		"_isCompletionRequired": true,
		"_isLockedOnRevisit": false
}
},$0
endsnippet

#################
#  Bookmarking  #
#################

snippet bookmarking-en "add bookmarking in the course.json" b
"_bookmarking": {
	"_isEnabled": ${1:true},
	"_comment": "_level = page | block | component",
	"_level": "${2:block}",
	"title": "Bookmarking",
	"body": "Would you like to continue where you left off?",
	"_buttons": {
		"yes": "Yes",
		"no": "No"
	}
}$0
endsnippet
snippet bookmarking-zh "add bookmarking in the course.json" b

"_bookmarking": {
		"_isEnabled": ${1:true},
		"_comment": "_level = page | block | component",
		"_level": "${2:block}",
		"title": "'继续学习' 或 '重新开始'",
		"body": "请选择是否从上次停止处继续学习？",
		"_buttons": {
				"yes": "继续学习",
				"no": "重新开始"
		}
}$0
endsnippet

###############
#  Resources  #
###############

snippet resources-en "add this to the course.json" b
"_resources": {
		"_isEnabled": true,
		"title": "Resources",
		"description": "Select here to view resources for this course",
		"_filterButtons": {
			"all": "All",
			"document": "PDF",
			"media": "Media",
			"link": "Link"
		},
		"_filterAria": {
			"allAria": "View all resources",
			"documentAria": "View document resources",
			"mediaAria": "View media resources",
			"linkAria": "View resource links"
		},
		"itemAriaExternal": "This content will open in a new window",
		"_resourcesItems": [
			{
				"_type": "document",
				"title": "$4",
				"description": "$5",
				"_link": "course/en/${6:pdf}/${7:link}.${8:pdf}"
			},
			{
				"_type": "media",
				"title": "$9",
				"description": "$10",
				"_link": "course/en/${11:media}/${12:link}.${13:mp4}"
			},
			{
				"_type": "link",
				"title": "$14",
				"description": "$15",
				"_link": "http://$16"
			}
		]
}$0
endsnippet
